{
  "manifest_version": 2,
  "name": "DDAS - Duplicate File Detector",
  "version": "1.0",
  "description": "Alerts users about potential duplicate file downloads.",
  "permissions": [
    "downloads",           
    "storage",            
    "activeTab",           
    "webRequest",          
    "webRequestBlocking"   
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    "icon16.png",
    "icon48.png",
    "icon128.png"
  ]
}
